func abs(x) {
    if x < 0 {
        -x 
    } else {
        x
    }
}

func sign(x) {
    if x < 0 {
        -1
    } else {
        0
    }
}

func double(x) {
    x + x
}

func min(x, y) {
    if x < y {
        x
    } else {
        y
    }
}

func max(x, y) {
    if x > y {
        x
    } else {
        y
    }
}
