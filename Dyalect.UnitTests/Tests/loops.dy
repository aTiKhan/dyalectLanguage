func whileTest1() {
    var n = 100
    var x = while n > 0 {
        if n == 33 {
            break n
        }
        n = n - 1
    }
    assert(33, x)
}

func whileTest2() {
    var n = 100
    var x = while n > 0 {
        if n == 33 {
            break
        }
        n = n - 1
    }
    if !x {
        x = 42
    }
    assert(42, x)
}

func nestedWhileTest() {
    var z = 5
    var c = 0
    while z >= 1 {
        var y = z - 1
        while y >= 0 {
            if true {
                c += 1
                break
            }
            y -= 1
        }
        z -= 1
    }
    assert(0, z)
    assert(5, c)
}

func doWhileTest1() {
    var x = 1
    do {
        x -= 1
    } while x > 0
    assert(0, x)
    do {
        x += 1
    } while false
    assert(1, x)
}

func doWhileTest2() {
    var x = 0
    do {
        x += 1
    } while x < 10
    assert(10, x)
}

func dowhileTest3() {
    var x = 0
    do {
        x += 1
        if x == 1 {
            break
        }
    } while x < 10
    assert(1, x)
}

func dowhileTest4() {
    var x = 0
    var iter = 0
    do {
        x += 1
        if x == 1 || x == 5 {
            continue
        }
        iter += 1
    } while x < 10
    assert(10, x)
    assert(8, iter)
}

func forTest1() {
    var str = ""
    for i in 1..5 {
        for _ in 1..i {
            str += "*"
        }
        str += "\n"
    }
    var pattern =
        "*\n" +
        "**\n" +
        "***\n" +
        "****\n" +
        "*****\n"
    assert(pattern, str)
}

func forTest2() {
    var acc = 0
    for x in 1..5 {
        if x % 2 != 0 {
            continue
        }
        for y in 6..10 {
            if y % 2 == 0 {
                continue
            }
            acc += x + y
        }
    }
    assert(44, acc)
}

func forTest3() {
    var acc = ""
    for x in 1..10 {
        if x > 5 {
            acc += ">>1"
            break
            acc += ">>2"
            acc += ">>3"
        }
    }
    assert(">>1", acc)
}

func forTest4() { //Bug #238
    var arr = []
    for x in [1,2,3,4] {
        x = x+x
        arr.add(x)
    }
    assert([2,4,6,8], arr)
}

func whileStackTest() { //#151
    var i = 1
    while true {
        if i < 100 {
            break
        }
        i += 1
    }
    assert(true, true)
}