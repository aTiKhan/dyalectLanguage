    func iter(n) {
        if n == 0 {
            0
        } else {
            acc = acc + 1;
            iter(n - 1)
        }
    }
    iter(10)
    acc
}

func factTest() 
{
    func fact(n) {
        if n == 1 {
            1
        }
        else {
            n * fact(n - 1)
        }
    }
    fact(20)
}

func powerTest()
{
    func pow(base, exponent) {
        if exponent == 1 {
            base
        }
        else if exponent == 0 {
            1
        }
        else {
            base * pow(base, exponent - 1)
        }
    }
    pow(10, 3)
}

