func fibTest()
{
    func fib(n)
    {
        if n == 0 || n == 1 {
            return n
        }
        fib(n - 1) + fib(n - 2)
    }
    fib(11)
}

func phoneParserTest()
{
    func digit(c) {
           c == "0"
        || c == "1"
        || c == "2"
        || c == "3"
        || c == "4"
        || c == "5"
        || c == "6"
        || c == "7"
        || c == "8"
        || c == "9"
    }

    func parse(str)
    {
        var max = #str
        var i = 0;
        var res = "";

        while i < max {
            const c = str[i]

            if c == "+" {
                i += 2
                continue
            }
            
            if digit(c) {
                res += c
            }

            i += 1
        }

        res
    }

    parse("+7 (964) 506-11-12")
}