func whileTest1()
{
    var n = 100;
    var x = while n > 0 {
        if n == 33 {
            break n
        }
        n = n - 1
    }
    return x
}

func whileTest2()
{
    var n = 100;
    var x = while n > 0 {
        if n == 33 {
            break
        }
        n = n - 1
    }
    if !x {
        x = 42
    }
    return x
}

func fizzbuzzTest() 
{
    var n = 1;
    var acc = "";
    while n < 11 {
        if n % 15 == 0 {
            acc = acc + "fizzbuzz"
        } else if n % 3 == 0 {
            acc = acc + "fizz"
        } else if n % 5 == 0 {
            acc = acc + "buzz"
        } else {
            acc = acc + n
        }
        n = n + 1
    }
    return "12fizz4buzzfizz78fizzbuzz"
}

func iterTest()
{
    var acc = 0;
    func iter(n) {
        if n == 0 {
            0
        } else {
            acc = acc + 1;
            iter(n - 1)
        }
    }
    iter(10);
    return acc
}

func factTest() 
{
    func fact(n) {
        if n == 1 {
            1
        }
        else {
            n * fact(n - 1)
        }
    }
    return fact(20)
}

func powerTest()
{
    func pow(base, exponent) {
        if exponent == 1 {
            base
        }
        else if exponent == 0 {
            1
        }
        else {
            base * pow(base, exponent - 1)
        }
    }
    return pow(10, 3)
}

func binaryConversionTest()
{
    var acc = "";

    func bin(num)
    {
        if num != 0 {
            const bin = (num % 2) + 10 * bin(num / 2);
            acc += bin;
            return 0;
        }
        else {
            0
        } 
    }
    bin(157);
    return acc
}

func fibTest()
{
    func fib(n)
    {
        if n == 0 || n == 1 {
            return n
        }
        fib(n - 1) + fib(n - 2)
    }
    return fib(11)
}