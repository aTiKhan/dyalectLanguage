type Point1 = { var px; var py }
func setterTest2() { //Bug #205
    static func Point1.Point1(x, y) {
        px = x
        py = y
    }
    func Point1.get(index) {
        if index == 0 || index == "x" {
            x
        } else if index == 1 || index == "y" {
            y
        } else {
            throw Error.IndexOutOfRange()
        }
    }
    func Point1.set(index, value) {
        if index == 0 || index == "x" {
            x = value
        } else if index == 1 || index == "y" {
            y = value
        } else {
            throw Error.IndexOutOfRange()
        }
    }
    var p = Point1(12, 34)
    p::x += p::x
    p::y += p::y
    assert(24, p::x)
    assert(68, p::y)
}

