type Nat = { var val }
func typeTest1() {
    func fetch(x) {
        if x < 0 {
            x
        } else {
            Nat(x)
        }
    }
    static func Nat.Nat(x) {
        if x < 0 {
            throw "Negative number."
        }
        val = x
    }
    func Nat.toInteger() {
        val
    }
    func Nat + (other) {
        fetch(val + other.toInteger())
    }
    func Nat - (other) {
        fetch(val - other.toInteger())
    }
    func Nat * (other) {
        fetch(val * other.toInteger())
    }
    func Nat / (other) {
        fetch(val / other.toInteger())
    }
    func Nat == (other) {
        val == other.toInteger()
    }
    var n = Nat(12)
    assert(Nat(24), n + Nat(12))
    assert(Nat(2), n - Nat(10))
    assert(-8, n - Nat(20))
    assert(Nat(24), n * Nat(2))
    assert(Nat(6), n / Nat(2))
    assert(Nat(6), n / Nat(2))
}

