  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Dyalect\Dyalect.csproj" />
  </ItemGroup>

  <ItemGroup>
    <None Update="Tests\tests.dy">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
  </ItemGroup>

</Project>
